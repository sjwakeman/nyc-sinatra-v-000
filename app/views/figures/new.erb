
 <form action="/figures/new" method="POST">
   Name of New Figure:
<input id="figure_name" type="text" name="figure[title_ids]"> <!-- name="figure[title_ids]" name="figure[title_id]"name="figure[name]"-->
<br><br>

<% Title.all.each do |title| %>
<label><%= title.name %></label>
<input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>"
<%='checked' if @figure.title.include?(title) %>></input>
<% end %>

   <input type="submit" value="Create New Figure">
<br><br>
   <a href="/figures">cancel</a>
 </form>
